<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">

    <persistence-unit name="mygourmet" transaction-type="JTA">
        <jta-data-source>jdbc/mygourmet</jta-data-source>
        <class>at.irian.jsfatwork.domain.Category</class>
        <class>at.irian.jsfatwork.domain.Address</class>
        <class>at.irian.jsfatwork.domain.Customer</class>
        <class>at.irian.jsfatwork.domain.Provider</class>
        <class>at.irian.jsfatwork.domain.Dish</class>
        <class>at.irian.jsfatwork.domain.Order</class>
        <class>at.irian.jsfatwork.domain.OrderItem</class>
        <validation-mode>NONE</validation-mode>
        <properties>
            <property name="eclipselink.target-database" value="Derby"/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.logging.level" value="INFO"/>
        </properties>

    </persistence-unit>
</persistence>
